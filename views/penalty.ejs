<%- include('header') -%>
<%- include('navbar') -%>
    <div class="container">
        <div class="row">
            <div class="col px-lg-6">
                <h2>Add Police Records</h2>
            </div>
        </div>
        <div class="row">
            <div class="col px-lg-6">
                <form method="post">
                <div class="form-group mb-2">
                    <label for="staticDriver" class="sr-only">Driver</label>
                    <input type="text" readonly class="form-control-plaintext" id="staticDriver" value="Driver:">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <select class="form-control" id="selectOwner" name="selectOwner">
                        <% drivers.forEach(function(driver){%>
                            <option class="dropdown-item"><%= driver.name %></option>
                        <%});%>
                    </select>
                </div>
                    <div class="form-group mb-2">
                        <label for="staticDriver" class="sr-only">Penalty</label>
                        <input type="text" readonly class="form-control-plaintext" id="staticPenalty" value="Penalty:">
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <select class="form-control" id="selectPenalty" name="selectPenalty" >
                            <% penalties.forEach(function(penalty){%>
                                <option class="dropdown-item"><%= penalty.points +'-'+ penalty.name%></option>
                            <%});%>
                        </select>
                    </div>
                <div class="col px-lg-6">
                    <button type="submit" class="btn btn-success">Add</button> </a>
                </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col px-lg-6">
                <h3>All Police Records:</h3>
            </div>
        </div>
        <div class="row">
            <div class="col py-3 px-lg-2 border bg-light">
                <div id="table" class="table">
                    <table class="table table-bordered table-responsive-md table-striped text-center">
                        <tr>
                            <th class="text-center">Driver Name</th>
                            <th class="text-center">Cars</th>
                            <th class="text-center">Summ of Penalty points</th>
                        </tr>
                        <% drivers.forEach(function(driver){ %>
                        <tr>
                            <td class="pt-3-half" ><%= driver.name %></td>

                            <td class="pt-3-half" > <% cars.forEach(function(car){
                            if (driver.name === car._driver.name) {%>
                                <%= car.make + '-' + car.model + '-' + car.license + '' + ';' %>
                                <%}})%> </td>


                            <td class="pt-3-half" ><%= driver.points %></td>
                        </tr>
                        <%})%>
                    </table>
                </div>
            </div>
        </div>
    </div>
<%- include('footer') -%>
